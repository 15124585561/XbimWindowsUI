<Window x:Class="XbimXplorer.PluginSystem.PluginsConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PluginsConfig" Height="323" Width="524">
    <Grid>
        <Button Margin="10,0,0,10" Click="Refresh" HorizontalAlignment="Left" Width="84" Height="22" VerticalAlignment="Bottom" >Refresh</Button>
        <ListView x:Name="PluginList" Margin="10,10,10,37" ItemsSource="{Binding Plugins}" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="220" DisplayMemberBinding="{Binding PluginId}" />
                    <GridViewColumn Header="Available" Width="120" DisplayMemberBinding="{Binding AvailableVersion}" />
                    <GridViewColumn Header="Installed" Width="120" DisplayMemberBinding="{Binding InstalledVersion}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Margin="0,0,10,10" Click="Download" Content="Download" HorizontalAlignment="Right" Width="80" Height="22" VerticalAlignment="Bottom" />
    </Grid>
</Window>
